<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="300dp"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_dialog_background"
  android:orientation="vertical"
  android:padding="@dimen/padding_sides_very_small">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/padding_sides_small"
    android:layout_marginBottom="@dimen/padding_sides_small"
    android:text="Select Date"
    android:textColor="#000000"
    android:textSize="@dimen/textsize_title"
    android:textStyle="bold" />

  <DatePicker
    android:id="@+id/datepicker_add_transactions_calendar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</LinearLayout>