<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="300dp"
  android:layout_height="300dp">

  <ImageView
    android:id="@+id/imageview_dialog_show_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:src="@drawable/photo_temp" />

  <ImageView
    android:id="@+id/delete_button_show_photo_dialog"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="right|bottom"
    android:layout_marginRight="@dimen/padding_sides_normal"
    android:layout_marginBottom="@dimen/padding_sides_normal"
    android:src="@drawable/icon_delete_button" />

  <TextView
    android:id="@+id/textview_count_show_photo_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:layout_marginBottom="@dimen/padding_sides_normal"
    android:text="1/5"
    android:textStyle="bold" />

</FrameLayout>